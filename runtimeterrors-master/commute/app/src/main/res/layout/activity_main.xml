<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/commute"
        android:layout_width="151dp"
        android:layout_height="0dp"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="44dp"
        android:text="Commute"
        app:layout_constraintBottom_toTopOf="@+id/train"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/train"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="63dp"
        android:text="Train"
        android:onClick="loadWebPage1"
        app:layout_constraintBottom_toTopOf="@+id/bus"
        app:layout_constraintEnd_toEndOf="@+id/bus"
        app:layout_constraintStart_toStartOf="@+id/bus"
        app:layout_constraintTop_toBottomOf="@+id/commute" />

    <Button
        android:id="@+id/bus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginBottom="458dp"
        android:text="Bus"
        android:onClick="loadWebPage2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/train" />
</androidx.constraintlayout.widget.ConstraintLayout>